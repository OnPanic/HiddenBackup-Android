<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.onpanic.hiddenbackup.fragments.FileManagerFragment">


    <ImageButton
        android:id="@+id/fm_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/fm_back_background"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:scaleType="fitStart"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <Button
        android:id="@+id/fm_cancel"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:padding="10dp"
        android:text="@string/cancel"
        android:textSize="18sp" />

    <Button
        android:id="@+id/fm_save"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/fm_cancel"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:padding="10dp"
        android:text="@string/save"
        android:textSize="18sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fm_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fm_cancel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fm_back" />
</RelativeLayout>